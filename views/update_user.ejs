<!-- include header -->
<%- include('include/_header.ejs') %>

<!-- main site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> Semua User</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Gunakan form dibawah untuk mengubah data akun</span>
        </div>

        <!-- form handling -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="Nama" class="text-light">Nama</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="nama" value="<%= user.nama %>" placeholder="M. Novianto Anggoro">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="<%= user.email %>" placeholder="example@gmail.com">
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Jenis Kelamin</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="jenis_kelamin" value="Laki-laki"
                            <%= user.jenis_kelamin == 'Laki-laki' ? 'checked' : '' %>>
                        <label for="radio-2" class="radio-label">Laki-laki</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="jenis_kelamin" value="Perempuan"
                            <%= user.jenis_kelamin == 'Perempuan' ? 'checked' : '' %>>
                        <label for="radio-3" class="radio-label">Perempuan</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="gender" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="status" value="Aktif"
                            <%= user.status == 'Aktif' ? 'checked' : '' %>>
                        <label for="radio-4" class="radio-label">Aktif</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="status" value="Tidak Aktif"
                            <%= user.status == 'Tidak Aktif' ? 'checked' : '' %>>
                        <label for="radio-5" class="radio-label">Tidak Aktif</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Simpan</button>
                </div>
            </div>
        </form>


    </div>
</main>

<!-- include footer -->
<%- include('include/_footer.ejs') %>
