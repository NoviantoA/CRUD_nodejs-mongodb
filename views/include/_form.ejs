<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Nama</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="nama" value="" placeholder="M. Novianto Anggoro">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="jenis_kelamin" class="text-light">Jenis Kelamin</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="jenis_kelamin" value="Laki-laki">
                <label for="radio-2" class="radio-label">Laki-laki</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="jenis_kelamin" value="Perempuan">
                <label for="radio-3" class="radio-label">Perempuan</label>
            </div>
        </div>
        <div class="form-group">
            <label for="jenis_kelamin" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Aktif">
                <label for="radio-4" class="radio-label">Aktif</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Tidak Aktif">
                <label for="radio-5" class="radio-label">Tidak Aktif</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Simpan</button>
        </div>
    </div>
</form>
